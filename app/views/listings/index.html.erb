<p id="notice"><%= notice %></p>

<h1>Listings of <%= current_user.email %></h1>


<button type="button" class="btn btn-default"><%= link_to 'New Listing', new_listing_path %></button>

<table class="table table-stripped" style="width:100%">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Images</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td ><%= listing.title %></td>
        <td><%= listing.description %></td>
        <td><%= listing.price %></td>
        <td><%= listing.user.email %></td>
        <td><%if listing.images? %>
            <% listing.images.each do |image| %>
              <%= image_tag(image.url,width: "50%") %>
            <% end%>
          <% end%>
        </td>
        <td><%= link_to 'Show', listing %></td>
        <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
        <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
