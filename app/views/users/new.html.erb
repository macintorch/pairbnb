<div class="row">
  <div class="col-md-offset-3 center">
    <div id="clearance" class="sign-up">
      <h2><%= t(".title") %></h2>

      <%= form_for @user do |form| %>
        <%= render partial: '/users/form', object: form %>

        <div class="submit-field">
          <%= form.submit "Sign Up", :class => "btn btn-primary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>