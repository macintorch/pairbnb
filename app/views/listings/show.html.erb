<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @listing.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Images:</strong>
  <%if @listing.images? %>
          <% @listing.images.each do |image| %>
            <%= image_tag(image.url, width:"50%") %>
          <% end%>
        <% end%>
</p>

<p>
  <strong>User:</strong>
  <%= @listing.user.email %>
</p>


<%= link_to 'Edit', edit_listing_path(@listing) %> |
<%= link_to 'Back', listings_path %>
