<%= form_for :session, url: session_path do |form| %>
  <div class="form-group">
    <%= form.text_field :email, type: 'email', :class => "form-group", :placeholder => "Email" %>
  </div>

  <div class="form-group">
    <%= form.password_field :password, :class => "form-group", :placeholder => "Password" %>
  </div>

  <div class="form-group">
    <%= form.submit "Sign In", :class => "btn btn-primary" %>
  </div>

  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path , :class => "btn btn-primary"%>
    <% end %>
    <%= link_to t(".forgot_password"), new_password_path, :class => "btn btn-primary"%>
  </div>
<% end %>